kind: Service
apiVersion: v1
metadata:
  labels:
    app: kubernetes-cockpit
  name: kkubernetes-cockpit
  namespace: kube-system
spec:
  type: NodePort
  ports:
  - protocol: TCP
    port: 9090
    targetPort: cock-port
    nodePort: 30090
  selector:
    app: kubernetes-cockpit
---
kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  labels:
    app: kubernetes-cockpit
  name: kubernetes-cockpit
  namespace: kube-system
spec:
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: kubernetes-cockpit
  template:
    metadata:
      labels:
        app: kubernetes-cockpit
    spec:
      containers:
      - name: kubernetes-cockpit
        image: cockpit/kubernetes:latest
        ports:
        - containerPort: 9090
          name: cock-port
          protocol: TCP
        env:
        - name: KUBE_INSECURE
          value: 'false'
      tolerations:
      - key: node-role.kubernetes.io/master
        effect: NoSchedule
---
